{
  "SwaggerIsEnabled": "True",

  "DictionaryManagingServiceConfiguration": {
    "Address": "http://vs-st-app01c.shtormtech.ru:8090/CSC.RIS.Dictionaries.API/DictionaryManagingService.svc/basic",
    "BasicHttpBinding": {
      "ClientCredentialType": "Windows",
      "SecurityMode": "TransportCredentialOnly"
    }
  },

  "DictionaryPresentationServiceConfiguration": {
    "Address": "http://vs-st-app01c.shtormtech.ru:8090/CSC.RIS.Dictionaries.API/DictionaryPresentationService.svc/basic",
    "BasicHttpBinding": {
      "ClientCredentialType": "Windows",
      "SecurityMode": "TransportCredentialOnly"
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            },
            {
              "Name": "Debug"
            },
            {
              "Name": "File",
              "Args": {
                "path": "D:/logs/PL.RisEditor/Log_.txt",
                "rollingInterval": "Day",
                "fileSizeLimitBytes": "10485760",
                "rollOnFileSizeLimit": true
              }
            }
          ]
        }
      }
    ]
  }
}
