{
  "SwaggerIsEnabled": "True",

  "DictionaryManagingServiceConfiguration": {
    "Address": "{transform:RisServicesUrl}/{transform:risServicesDictionariesApiPath}/DictionaryManagingService.svc/basic",
    "BasicHttpBinding": {
      "ClientCredentialType": "Windows",
      "SecurityMode": "TransportCredentialOnly"
    }
  },

  "DictionaryPresentationServiceConfiguration": {
    "Address": "{transform:RisServicesUrl}/{transform:risServicesDictionariesApiPath}/DictionaryPresentationService.svc/basic",
    "BasicHttpBinding": {
      "ClientCredentialType": "Windows",
      "SecurityMode": "TransportCredentialOnly"
    }
  },

  "AllowedHosts": "*",

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            },
            {
              "Name": "Debug"
            },
            {
              "Name": "File",
              "Args": {
                "path": "{transform:RisEditorWebServicesFolder}/{transform:RisEditorWebApiPath}/Log_.txt",
                "rollingInterval": "Day",
                "fileSizeLimitBytes": "10485760",
                "rollOnFileSizeLimit": true
              }
            }
          ]
        }
      }
    ]
  }
}
